<!DOCTYPE html>
<head>
	<title>Антикафе Автограф</title>
	<meta charset="utf-8">
	<link href="static/css/bootstrap.min.css" rel="stylesheet">
	<link href="static/css/bootstrap.css" rel="stylesheet">
	<link href="static/css/style.css" rel="stylesheet" >
</head>
<body >
	<div id="main" class="col-md-10 col-sm-10 col-xs-10 col-sm-offset-1 col-xs-offset-1 col-md-offset-1">
		<div id="doubleMain" class="col-md-12 col-sm-12 col-xs-12">
	        {% if username == none %}
			<form action="admin" method="POST">
				<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
					<div class="error col-md-10 col-md-offset-2 col-xs-10 col-sm-10 col-md-offset-2 col-sm-offset-2">
						<p>{{ error }} </p>
					</div>
				</div>
				<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
					<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
						Введите логин:
					</div>
					<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
						<input type="text"  class="form-control" placeholder="Логин" name="login">
					</div>
				</div>
				<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
					<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
						Введите пароль:
					</div>
					<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
						<input type="password"  class="form-control" placeholder="Пароль" name="password">
					</div>
				</div>
				<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
					<div class="col-md-3 col-md-offset-4">
						<input type="submit"  class="form-control" value="Войти">
					</div>
				</div>
			</form>
	        {% else %}
	            <form action="logOut.html">
	            	<div class="col-md-9 col-xs-9 col-sm-9 col-xs-offset-3 col-sm-3 col-md-offset-3">
	            		<input type="submit" class="form-control" value="Выйти">
	            	</div>
	            </form>
	        {% endif %}
	        </div>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="static/js/bootstrap.js"></script>
    <script src="static/js/bootstrap.min.js"></script>
</body>
</html>
