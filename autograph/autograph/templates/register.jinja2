{% extends "base.jinja2" %}
			{% block data %}
			<div class="register">
				<form action="register.html" method="POST" name="register">
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						{% for er in errors %}
							<div class="error col-md-10 col-md-offset-2 col-xs-10 col-sm-10 col-md-offset-2 col-sm-offset-2">
								<p>{{ er }} </p>
							</div>
						{% endfor %}
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите имя:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="text" class="form-control" placeholder="Имя" name="name" value="{{ name }}">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите фамилию:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="text" class="form-control" placeholder="Фамилия" name="secondName" value="{{ secondName }}">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите e-mail:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="text" class="form-control" placeholder="e-mail" name="mail" value="{{ mail }}" >
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите логин:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="text" class="form-control" placeholder="Логин" name="login" value="{{ login }}">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите пароль:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="password" class="form-control" placeholder="Пароль" name="password">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите подтверждения пароля:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="password" class="form-control" placeholder="Подтверждение пароль" name="passwordTwo">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-4">
							<input type="submit" class="form-control" value="Зарегистрироваться">
						</div>
					</div>
				</form>
			</div>
{% endblock %}