<!DOCTYPE html>
<head>
	<title>Антикафе Автограф</title>
	<meta charset="utf-8">
	<link href="static/css/bootstrap.min.css" rel="stylesheet">
	<link href="static/css/bootstrap.css" rel="stylesheet">
	<link href="static/css/style.css" rel="stylesheet" >
</head>
<body >
	<div id="main" class="col-md-10 col-sm-10 col-xs-10 col-sm-offset-1 col-xs-offset-1 col-md-offset-1">
		<div id="doubleMain" class="col-md-12 col-sm-12 col-xs-12">
		<div class="col-md-12 col-xs-12 col-sm-12">
			<div class="row">
				<ul class="nav nav-justified list">
					<li class="li">
						<a class="a elMenu" href="/adminEditComment">Менять коментарии</a>
					</li>
					<li class="li">
						<a class="a elMenu" href="/adminEditTable">Менять расписание</a>
					</li>
					<li class="li">
						<a class="a elMenu" href="/logOut.html">Выйти</a>
					</li>
				</ul>
			</div>
		</div>

			{% for comment in comments %}
				<form action="adminEditComment" method="POST">
					<div class="comment col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-xs-offset-1 col-sm-offset-1">
						<div class="col-md-8 col-xs-8 col-sm-8">
							<p> 
								<span class="head">{{comment.Name_com}}</span><br>
							 	<span class="small">{{comment.Date}}, {{comment.Login}}</span><br>
							 	<span class="comment">{{comment.Text}}<br>
							 		id: 
							 	<input type="text" value="{{comment.id}}" name="id" readonly="readonly">
							 	</span>
							</p>
						</div>
						<div class="col-md-2 col-xs-2 col-sm-2">
							<input type="submit" value="Удалить" class="form-control">
						</div>
					</div>
				</form>
			{% endfor %}
        </div>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="static/js/bootstrap.js"></script>
    <script src="static/js/bootstrap.min.js"></script>
</body>
</html>
