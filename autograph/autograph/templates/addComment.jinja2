{% extends "base.jinja2" %}
			{% block data %}
            	<br>
	            <form action="addComment.html" method="POST">
	            	<div class="col-md-10 col-xs-10 col-sm-10 col-xs-offset-1 col-sm-1 col-md-offset-1">
	            		<div class="col-md-12 col-xs-12 col-sm-12">
		            		<div class="col-md-3 col-xs-3 col-sm-3">
		            			<p>Введите название комментария</p>
		            		</div>
		            		<div class="col-md-9 col-xs-9 col-sm-9">
		            			<input type="text" class="form-control" name="name">
		            		</div>
		            	</div>
	            		<div class="col-md-12 col-xs-12 col-sm-12">
		            		<div class="col-md-3 col-xs-3 col-sm-3">
		            			<p>Введите комментарий</p>
		            		</div>
		            		<div class="col-md-9 col-xs-9 col-sm-9">
		            			<textarea class="form-control" rows="4" placeholder="Ваш комментарий" name="comment"></textarea>
		            		</div>
		            	</div>
	            		<div class="col-md-4 col-xs-4 col-sm-4 col-md-offset-4 col-xs-offset-4 col-sm-4">
	            			<br>
	            			<input type="submit" class="form-control" value="Добавить комментарий">
	            		</div>
	            	</div>
	            </form>
			{% endblock %}