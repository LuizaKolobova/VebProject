{% extends "base.jinja2" %}
			{% block data %}
			<div class="register">
				<form action="logIn.html" method="POST">
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="error col-md-10 col-md-offset-2 col-xs-10 col-sm-10 col-md-offset-2 col-sm-offset-2">
							<p>{{ error }} </p>
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите логин:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="text"  class="form-control" placeholder="Логин" name="login">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-2 col-xs-3 col-sm-3 col-md-offset-2 col-sm-offset-2">
							Введите пароль:
						</div>
						<div class="col-md-4 col-md-offset-1 col-xs-4 col-sm-4 col-md-offset-1 col-sm-offset-1">
							<input type="password"  class="form-control" placeholder="Пароль" name="password">
						</div>
					</div>
					<div class="oneRegister col-md-12 col-sm-12 col-xs-12">
						<div class="col-md-3 col-md-offset-4">
							<input type="submit"  class="form-control" value="Войти">
						</div>
					</div>
				</form>
			</div>
			{% endblock %}
